@model CommonLayer.CommonModels.HalqaModel
@{
    ViewBag.Title = "Create";
}

<div class="box-header with-border">
    <h3 class="box-title">Add Madarsa</h3>
</div>
<br />

@using (Html.BeginForm("Create", "Halqa", FormMethod.Post))
{


    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Create","Halqa",FormMethod.Post))
            { 

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ameer, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ameer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ameer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nayab, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nayab, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nayab, "", new { @class = "text-danger" })
                </div>
            </div>


            <input type="hidden" class="hdnId" id="hdnId" value="@Model.Id" />
            <input type="hidden" class="hdnCreatedDate" id="hdnCreatedDate" value="@Model.CreatedDate" />
            <div class="form-group col-lg-12">
                <div class="col-md-offset-5 col-md-2">
                    @if (Model.Id != null && Model.Id != 0)
                        {
                        <button type="submit" class="btn-block btn btn-success" data-id="@Model.Id" id="btnRegisterUpdate">
                            Update
                        </button>
                        }
                        else
                        {
                        <button type="submit" class="btn-block btn btn-success" data-id="0" id="btnRegister">
                            Register
                        </button>
                        }
                </div>
                <div class="col-md-2">
                    <button value="Cancel"
                            class="btn-block btn btn-danger" type="button" id="addressSearch"
                            onclick="location.href='@Url.Action("Index")'">
                        Cancel
                    </button>
                </div>
            </div>

            }
        </div>
    </div>
}





